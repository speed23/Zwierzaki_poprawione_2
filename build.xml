<?xml version="1.0" encoding="UTF-8"?>
<project name="Zwierzaki">
<target name="compile">
<mkdir dir="bin"/>
<javac srcdir="src" destdir="bin"/>
</target>

<target name="jar">
<mkdir dir="bin/jar"/>
<jar destfile="bin/jar/Zwierzaki.jar" basedir="bin">
<manifest>
<attribute name="Main-Class" value="Main"/>
</manifest>
</jar>
</target>

<target name="run-jar" depends="jar">
<java jar="bin/jar/Zwierzaki.jar" fork="true"/>
</target>

<target name="clean">
<delete dir="bin/jar">
</delete>
</target>
	
<target name="ZooTest">
<mkdir dir="${junit.output.dir}"/>
	 <junit fork="yes" printsummary="withOutAndErr">
	       <formatter type="xml"/>
	       <test name="com.test" todir="${junit.output.dir}"/>
	       <classpath refid="Zoo.classpath"/>
	 </junit>
</target>

</project>